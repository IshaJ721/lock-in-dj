{
  "manifest_version": 3,
  "name": "FocusDJ",
  "version": "0.1.0",
  "description": "Real-time focus detection with adaptive music intervention - powered by Viola AI",
  "action": {
    "default_popup": "src/ui/popup.html"
  },
  "options_page": "src/ui/options.html",
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "http://127.0.0.1:*/*"
    ]
  },
  "background": {
    "service_worker": "src/background/service_worker.js",
    "type": "module"
  },
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "idle",
    "scripting",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["src/content/ytm_controller.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/activity_tracker.js", "src/content/viola_popup.js"],
      "run_at": "document_idle",
      "exclude_matches": ["https://music.youtube.com/*"]
    }
  ]
}
